<?xml version="1.0" encoding="UTF-8"?>
# vim: shiftwidth=2
#filter substitution
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
 xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">
    <em:id>@EXTENSION_UUID@</em:id>
    <em:name>MinimizeToTray Plus</em:name>
    <em:version>@EXTENSION_VER@</em:version>
    <em:creator>Mook - Original Developer</em:creator>
    <em:developer>Michael Buckley - Current Maintainer</em:developer>
    <em:contributor>Nils Maier of MinTrayR - For help with a bug</em:contributor>
    <em:description>Minimizes the application to the system tray</em:description>
    <em:iconURL>chrome://minimizetotray/skin/icon.png</em:iconURL>
    <em:optionsURL>chrome://minimizetotray/content/prefs.xul</em:optionsURL>
    <em:targetPlatform>@EXTENSION_ARCH@</em:targetPlatform>
    
    <!-- this extension is appManaged -->
    <em:hidden>true</em:hidden>
    <em:appManaged>true</em:appManaged>

    <em:targetApplication>
      <Description>
        <em:id>nightingale@getnightingale.com</em:id> <!-- nightingale -->
        <em:minVersion>@EXTENSION_MIN_VER@</em:minVersion>
        <em:maxVersion>@EXTENSION_MAX_VER@</em:maxVersion>
      </Description>
    </em:targetApplication>
  </Description>
</RDF>
