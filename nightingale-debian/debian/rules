#!/usr/bin/make -f

ICONS_DESTDIR = compiled/icons/hicolor
INSTALL_DATA ?= install -m 644 -T
SIZES = 16 24 32 48 64 96 128 256 512


%:
	dh $@ --parallel

override_dh_auto_configure:
	# nothing to do, as we do that with dh_auto_build.

override_dh_auto_build:
	echo 'ac_add_options --with-taglib-source=packaged' >> nightingale.config
	echo 'ac_add_options --enable-libnotify' >> nightingale.config
	echo 'ac_add_options --enable-unity-integration' >> nightingale.config
	echo 'ac_add_options --enable-system-nspr' >> nightingale.config
	echo 'ac_add_options --enable-official' >> nightingale.config
	$(CURDIR)/build.sh

	# remove extra license file
	rm -f compiled/dist/xulrunner/LICENSE

	# remove libnspr, as we use the native one
	rm -f compiled/dist/xulrunner/libnspr4.so

    # install application icons
	$(foreach SIZE,$(SIZES),mkdir -p $(ICONS_DESTDIR)/$(SIZE)x$(SIZE)/apps ; \
	$(INSTALL_DATA) app/branding/nightingale-$(SIZE).png $(ICONS_DESTDIR)/$(SIZE)x$(SIZE)/apps/nightingale.png ;)

    # Workaround (remove when fixed in deps)
	# correct permissions of files that were incorrectly marked as executable
	chmod a-x compiled/dist/icons/updater.png
	chmod a-x `find compiled/dist/xulrunner/ -name *.aff`
	chmod a-x `find compiled/dist/xulrunner/ -name *.chk`
	chmod a-x `find compiled/dist/xulrunner/ -name *.css`
	chmod a-x `find compiled/dist/xulrunner/ -name *.dic`
	chmod a-x `find compiled/dist/xulrunner/ -name *.dtd`
	chmod a-x `find compiled/dist/xulrunner/ -name *.gif`
	chmod a-x `find compiled/dist/xulrunner/ -name *.html`
	chmod a-x `find compiled/dist/xulrunner/ -name *.ini`
	chmod a-x `find compiled/dist/xulrunner/ -name *.js`
	chmod a-x `find compiled/dist/xulrunner/ -name *.jsm`
	chmod a-x `find compiled/dist/xulrunner/ -name *.png`
	chmod a-x `find compiled/dist/xulrunner/ -name *.properties`
	chmod a-x `find compiled/dist/xulrunner/ -name *.rdf`
	chmod a-x `find compiled/dist/xulrunner/ -name *.so`

	# move unity-integration
	rm -f compiled/dist/extensions/unity-integration@lookingman.org/README
	mv compiled/dist/extensions/unity-integration@lookingman.org debian/

	# make additional addons
	cd addons && python make.py eqpresets
	cd addons && python make.py equalizerpane
	cd addons && python make.py newtab

override_dh_auto_test:
	# This isn't a build with enabled tests.
	# dh_auto_test would make the build stop with an error warning.
	# DON'T remove the line 'override_dh_auto_test:' to keep it disabled!

override_dh_auto_clean:
	dh_auto_clean -- clobber

override_dh_clean:
	dh_clean nightingale.config config.log addons/*.xpi

override_dh_builddeb:
	# use xz compression
	dh_builddeb -- -Zxz

